{
  "expo": {
    "name": "GuardVault",
    "slug": "GuardVault",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./src/assets/images/appicon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to securely authenticate and protect your passwords."
      },
      "splash": {
        "image": "./src/assets/images/appicon.png",
        "resizeMode": "contain",
        "backgroundColor": "#1f2937"
      }
    },
    "android": {
      "package": "com.guardvault.app",
      "versionCode": 1,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/appicon.png",
        "backgroundColor": "#1f2937"
      },
      "splash": {
        "image": "./src/assets/images/appicon.png",
        "resizeMode": "contain",
        "backgroundColor": "#1f2937"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "EXPO_ROUTER_APP_ROOT": "app/index",
      "eas": {
        "projectId": "f3cca095-50b2-43d0-8486-85e4a73eb3dd"
      }
    }
  }
}
